# --- Mattermost ---
SM_MATTERMOST_URL=https://mattermost.example.com
SM_MATTERMOST_TOKEN=
SM_MATTERMOST_TEAM_ID=
# SM_CHANNEL_CATEGORY=CLAUDE-SESSIONS
# SM_BOT_TRIGGER=@claude

# --- GitHub / Repos ---
# SM_DEFAULT_ORG=your-org
# SM_REPOS_BASE_PATH=/home/claude/repos
# SM_WORKTREES_PATH=/home/claude/worktrees
# SM_AUTO_PULL=false

# --- VM (SSH target for devcontainer) ---
SM_VM_HOST=192.168.12.10
# SM_VM_USER=claude
# SM_VM_SSH_KEY_PATH=/secrets/ssh/id_ed25519
# SM_VM_SSH_KEY=            # Raw SSH key content (takes priority over path)
# SM_SSH_TIMEOUT_SECS=30

# --- Container ---
# SM_CONTAINER_RUNTIME=podman
# SM_CONTAINER_IMAGE=claude-code:latest
# SM_CONTAINER_NETWORK=isolated
# SM_CLAUDE_COMMAND=claude --dangerously-skip-permissions
# SM_DEVCONTAINER_TIMEOUT_SECS=120

# --- Orchestrator ---
# SM_ORCHESTRATOR_COMPACT_THRESHOLD=50

# --- OPNsense Firewall ---
SM_OPNSENSE_URL=https://opnsense.example.com
SM_OPNSENSE_KEY=
SM_OPNSENSE_SECRET=
# SM_OPNSENSE_ALIAS=llm_approved_domains
# SM_OPNSENSE_VERIFY_TLS=true
# SM_OPNSENSE_TIMEOUT_SECS=30

# --- Callback / HTTP Server ---
SM_CALLBACK_SECRET=
# SM_CALLBACK_URL=http://session-manager:8000/callback
# SM_LISTEN_ADDR=0.0.0.0:8000

# --- Database ---
SM_DATABASE_URL=postgres://user:pass@localhost:5432/session_manager
# SM_DATABASE_POOL_SIZE=5

# --- Rate Limiting ---
# SM_RATE_LIMIT_RPS=10
# SM_RATE_LIMIT_BURST=20

# --- Access Control ---
# SM_ALLOWED_APPROVERS=user1,user2
